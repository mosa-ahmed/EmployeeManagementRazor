@page

@model EmployeeManagementRazor.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Index";
    ViewData["ShowButtons"] = true;
}

<form method="get">
    <div class="input-group">
        <input class="form-control" asp-for="SearchTerm" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>
<hr />
@await Component.InvokeAsync("HeadCount")

<h1>Employees</h1>

<div class="card-deck">
    @foreach (var employee in Model.employees)
    {
        <partial name="_DisplayEmployeePartial" model="employee" view-data="ViewData" />
    }
</div>

